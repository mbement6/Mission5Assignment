@{
    ViewData["Title"] = "Golf Tutoring Calculator";
    Layout = "_Layout";
}

<h2>Golf Tutoring Cost Calculator</h2>

<p>Interested in improving your golf skills? Enter the number of hours you need tutoring, and we’ll calculate the total cost.</p>

<label for="hours">Hours of Tutoring:</label>
<input type="number" id="hours" min="1" required>
<span id="error-message" style="color: red; display: none;">Please enter a valid positive number</span>

<br>
<br>

<label for="rate">Rate per Hour:</label>
<input type="text" id="rate" value="50" readonly>

<br>
<br>

<button id="calculate">Calculate Total</button>

<p>Total Cost: <span id="total"></span></p>

<br>

<script src="js/calculator.js"></script>

<a href="/Home/Index">
    <button>Back to Home</button>
</a>
